{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <span class="error">{{ error.messageKey }}</span>
    {% endif %}

    <div id="intro" class="bg-image shadow-2-strong">
        <div class="mask d-flex align-items-center h-100" >
            <div class="mask d-flex align-items-center h-100" >
                <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                    <div class="bg-image hover-overlay ripple shadow-1-strong rounded" data-ripple-color="light">
                        <img
                            src="https://cdn.pixabay.com/photo/2016/08/31/09/05/tablet-1632908__340.jpg"
                            class="w-100"
                        />
                    </div>
                </div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-12 col-md-11">
                            <div class="bg-white  rounded-5 shadow-5-strong p-5">
                                <form action="{{ path('security_login')}}" method="post">
                                    <!-- Email input -->
                                    <div class="form-outline mb-4">
                                        <input type="email" required name="_username" class="form-control" />
                                        <label class="form-label" required >Email address</label>
                                    </div>
                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                        <input type="password"  name="_password" class="form-control" />
                                        <label class="form-label"  >Password</label>
                                    </div>
        
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}