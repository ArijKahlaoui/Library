{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    {% for article in articles %}
        <main class="my-5">
            <div class="container">
            <!--Grid row-->
            <div class="row">
                <!--Grid column-->
                <div class="col-md-9 mb-4">
                <!--Section: Content-->
                    <section>
                        <!-- Post -->
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="bg-image hover-overlay shadow-1-strong rounded ripple" data-mdb-ripple-color="light">
                                    <img src="{{ article.image }}" class="img-fluid" />

                                </div>
                            </div>
                
                            <div class="col-md-8 mb-4">
                                <h5>{{ article.title }}</h5>
                                <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y') }} Ã  {{article.createdAt | date('H:i')}}</div>
                                <p>
                                    {{article.content | raw }}
                                </p>

                                <a href="{{ path('blog_show',{'id':article.id}) }}" class="btn btn-primary">Lire la suit</a>
                                <a href="{{ path('blog_edit',{'id':article.id}) }}" class="btn btn-primary">Edit</a>
                                <a href="" class="btn btn-primary">Emprunter</a>
                                
                
                            </div>
                        </div>
                    </section>  
                </div>
            </div>
        </div>
        </main>
    {% endfor %}  

{% endblock %}
